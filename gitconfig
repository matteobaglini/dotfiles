[user]
	email = matteo.baglini@gmail.com
	name = Matteo Baglini
[github]
	user = matteo.baglini
[push]
	default = tracking
[core]
	autocrlf = input
	editor = vim
[color]
    diff = auto
    status = auto
    branch = auto
    ui = auto
[merge]
	log = true
	tool = vimdiff
[diff]
	tool = vimdiff
[rerere]
	enabled = true
[alias]
	l1 = log --pretty=oneline -n 20 --graph
	l = log --pretty=format:"%C(yellow)%h%Cred%d\\ %Creset%s%Cgreen\\ [%cn]" --decorate --graph
	ll = log --pretty=format:"%C(yellow)%h%Cred%d\\ %Creset%s%Cgreen\\ [%cn]" --decorate --numstat
	ld = log --pretty=format:"%C(yellow)%h\\ %ad%Cred%d\\ %Creset%s%Cblue\\ [%cn]" --decorate --date=relative
    fl = log -u
	sc = diff --name-only --diff-filter=U
	s = status -s
	tags = tag -l
	branches = branch -a
	remotes = remote -v
	cm = commit -m
	ca = add -A
	bd = branch -D
	rd = push origin --delete
	co = checkout
	pl = git pull --prune
	pr = pull --rebase --prune
	ps = push
	undo = reset HEAD~1 --mixed
	throw = reset HEAD~1 --hard
