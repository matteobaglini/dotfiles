[user]
    email = matteo.baglini@gmail.com
    name = Matteo Baglini
[github]
    user = matteo.baglini
[push]
    default = tracking
[core]
    autocrlf = input
    editor = vim
[color]
    diff = auto
    status = auto
    branch = auto
    ui = auto
[merge]
    log = true
    tool = vimdiff
[diff]
    tool = vimdiff
[rerere]
    enabled = true
[alias]
    l1 = log --pretty=oneline -n 20 --graph
    l = log --pretty=format:"%C(yellow)%h%Cred%d\\ %Creset%s%Cgreen\\ [%cn]" --decorate --graph
    ll = log --pretty=format:"%C(yellow)%h%Cred%d\\ %Creset%s%Cgreen\\ [%cn]" --decorate --numstat
    ld = log --pretty=format:"%C(yellow)%h\\ %ad%Cred%d\\ %Creset%s%Cblue\\ [%cn]" --decorate --date=relative
    fl = log -u
    sc = diff --name-only --diff-filter=U
    s = status -s
    tags = tag -l
    bs = branch -a
    rs = remote -v
    bl = blame
    cm = commit -m
    ca = commit --amend
    ad = add -A
    bd = branch -D
    rd = push origin --delete
    co = checkout
    cob = checkout -b
    pl = pull --prune
    pr = pull --rebase --prune
    ps = push
    df = diff
    undo = reset HEAD~1 --mixed
    throw = reset HEAD~1 --hard
    c = clean -df
    ci = clean -dfx
[filter "lfs"]
    required = true
    clean = git-lfs clean -- %f
    smudge = git-lfs smudge -- %f
[credential]
    helper = store
